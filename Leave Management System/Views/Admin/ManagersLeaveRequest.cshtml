@model IEnumerable<Leave_Management_System.Models.Leave>

@{
    ViewBag.Title = "ResearcherLeaveRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="card">

    <div class="card-header">
        طلبات المدراء
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>الطلبات</th>
                        <th>عرض تفاصيل الاجازة</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                لديك طلب   @item.Leave_Type1.Lt_Name من المدير  @item.Employee.Emp_Name
                            </td>
                            <td>
                                @Html.ActionLink("عرض", "ManagersLeaveReq", new { id = item.Leave_Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>