@model IEnumerable<Leave_Management_System.Models.Leave>

@{
    ViewBag.Title = "ResearcherLeaveRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        //$.getJSON('/Employees/ResearcherWithoutmedicalInspectionImg', function (res) {
        //    console.log(res);
        //});
        $.ajax({
            //async: true,
            type: 'GET',
            url:"/Employees/ResearcherWithoutmedicalInspectionImg",
            dataType: "json",
            contentType: "application/josn;charset=utf-8",
            success: function (response) {
                $('#ResearcherWithoutmedicalInspectionImg').append("<tr><td>" + response.data + " بحاجه الى ارفاق وثيقة معاينة طبية " + "</td></tr>");
            },
            error: function () {
                console.log("error");
            }
        });
    }); 
                //'/Employees/ResearcherWithoutmedicalInspectionImg',
</script>
<br />
<div class="card">

    <div class="card-header">
        طلبات الباحثين
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>الطلبات</th>
                        <th>عرض تفاصيل الاجازة</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                لديك طلب   @item.Leave_Type1.Lt_Name من الباحث  @item.Employee.Emp_Name
                            </td>
                            <td>
                                @Html.ActionLink("عرض", "ResLeaveReq", new { id = item.Leave_Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

